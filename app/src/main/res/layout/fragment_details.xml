<?xml version="1.0" encoding="utf-8"?>


<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".DetailsFragment">
    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:id="@+id/title"
            android:layout_alignParentTop="true"
            android:layout_alignParentBottom="false"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:paddingBottom="35dp"
            android:gravity="center"
            android:paddingTop="35dp"
            android:background="@color/teal"
            android:textColor="@color/white"
            android:fontFamily="sans-serif-condensed"
            android:textSize="35sp"/>

        <ImageView
            android:layout_width="170dp"
            android:layout_height="220dp"
            android:id="@+id/grid_item_image"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/title"
            android:paddingTop="10dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/movieRelease"
            android:layout_toRightOf="@+id/grid_item_image"
            android:layout_below="@+id/title"
            android:textSize="30dp"
            android:paddingBottom="@dimen/padding_bottom_textview"
            android:paddingLeft="75dp"
            android:paddingTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/movieRating"
            android:layout_below="@+id/movieRelease"
            android:layout_toRightOf="@+id/grid_item_image"
            android:paddingBottom="10dp"
            android:textSize="25dp"
            android:paddingLeft="75dp"
            android:paddingTop="20dp"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="Add to Favorites"
            android:textColor="@color/white"
            android:background="@color/teal"
            android:id="@+id/buttonFavorite"
            android:layout_below="@+id/movieRating"
            android:layout_toRightOf="@+id/grid_item_image"
            android:paddingBottom="@dimen/padding_bottom_textview"
            android:paddingRight="20dp"
            android:paddingLeft="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/movieSynopsis"
            android:layout_below="@+id/grid_item_image"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trailers"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:id="@+id/trailers"
            android:layout_below="@+id/movieSynopsis"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:paddingTop="20dp"
            android:paddingLeft="15dp"
            android:paddingRight="20dp"/>

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Trailer 1"
            android:id="@+id/button"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/trailers"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Trailer 2"
            android:id="@+id/button2"
            android:layout_marginTop="10dp"
            android:layout_below="@+id/button"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="60dp"
            android:text="Read Reviews"
            android:id="@+id/button3"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/button2"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>
</ScrollView>
